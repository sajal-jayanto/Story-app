<div style="margin:5%;">
<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card top-margin">
                <div class="card-header text-center"> <strong> Creat Story </strong> </div>
                <div class="card-body">
                    <form action="/user/creat" method="post" enctype="multipart/form-data"> 
                        <div class="form-group">
                            <label> <strong> Headline </strong> </label>
                            <input type="text" class="form-control" name="headline" required>
                        </div>
                        <div class="form-group">
                            <label> <strong> Topic </strong> </label>
                            <input type="text" class="form-control" name="topic" required>
                        </div>
                        <div class="form-group">
                            <label> <strong> Image </strong> </label>
                            <input type="file" class="form-control-file border" name="image" required>
                        </div>
                        <div class="form-group">
                            <label> <strong> Story </strong> </label>
                            <textarea name="story_body" required> </textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Publish</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>